{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "Link",
			"type": "shell",
			"command": "ld",
			"args": [
				"-m",
				"elf_i386",
				"./bin/ex.o",
				"-o",
				"./bin/ex"
			],
			"problemMatcher": [],
			"dependsOn": "Build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "nasm",
			"args": [
				"-f",
				"elf32",
				"ex.asm",
				"-o",
				"./bin/ex.o"
			],
			"group": "build",
			"problemMatcher": {
				"owner": "nasm",
				"fileLocation": [
					"absolute"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}
