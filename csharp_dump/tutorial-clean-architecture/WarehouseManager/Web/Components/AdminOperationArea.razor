@inject IEntityService<OperationAreaModel> OperationAreaService

<div style="width: 33%" class="d-flex flex-column mx-auto">
    <div class="fw-bold fs-5 mb-4">Manage Operation Areas</div>
    <div>
        <label class="form-label fw-bold">Add Operation Area:</label>
        <div class="d-flex flex-row">
            <InputText class="form-control" @bind-Value="OperationAreaNew.Name"></InputText>
            <button style="width: 110px" class="btn btn-custom" onclick="@(() => CreateOperationArea(OperationAreaNew))">Add</button>
        </div>
        <p class="text-danger mt-2">@MessageTop</p>
    </div>

    <hr class="my-5" />

    <div>
        <label class="form-label fw-bold">Select Operation Area:</label>
        <InputSelect class="form-control" Value="OperationAreaSelected.OperationAreaId" ValueExpression="@(() => OperationAreaSelected.OperationAreaId)" ValueChanged="((Guid operationAreaId) => HandleChangeEvent(operationAreaId))">
            <option value="">-- Select --</option>
            @if (OperationAreas?.Count > 0)
            {
                @foreach (var operationArea in OperationAreas)
                {
                    <option value="@operationArea.OperationAreaId">@operationArea.Name</option>
                }
            }
        </InputSelect>

        <label class="form-label mt-4 fw-bold">Update Operation Area:</label>
        <div class="d-flex flex-row">
            <InputText class="form-control" @bind-Value="OperationAreaSelected.Name"></InputText>
            <button style="width: 110px" class="btn btn-custom" onclick="@(() => UpdateOperationArea(OperationAreaSelected))">Update</button>
        </div>
        <p class="text-danger mt-2">@MessageBottom</p>

        <button style="height: 38px" class="btn btn-custom-full mt-5" onclick="@(() => DeleteOperationArea(OperationAreaSelected.OperationAreaId))">Delete</button>
    </div>
</div>
