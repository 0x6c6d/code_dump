@inject IProcurementService procurementService

<div class="modal bg-dark bg-opacity-75" style="display: @(showModal ? "block" : "none")">

    @if (!string.IsNullOrEmpty(message))
    {
        <p class="text-danger">@message</p>
    }

    <div class="d-flex h-100 justify-content-center align-items-center">
        <div style="max-height: 100%; width: 30%; min-width: 550px">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Lieferant</h1>
                    <button type="button" @onclick="CloseModal" class="btn-close"></button>
                </div>
                <div class="modal-body mx-auto p-5">
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Name:</span>
                        <span>@procurement.Name</span>
                    </div>
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Link:</span>
                        <span>@procurement.Link</span>
                    </div>
                    <hr />
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Verkauf - Kontakt:</span>
                        <span>@procurement.SalesName</span>
                    </div>
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Verkauf - Email:</span>
                        <span>@procurement.SalesEmail</span>
                    </div>
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Verkauf - Telefon:</span>
                        <span>@procurement.SalesPhone</span>
                    </div>
                    <hr />
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Support - Kontakt:</span>
                        <span>@procurement.SupportName</span>
                    </div>
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Support - Email:</span>
                        <span>@procurement.SupportEmail</span>
                    </div>
                    <div class="d-flex flex-row mb-2">
                        <span class="fw-bold" style="width: 200px">Support - Telefon:</span>
                        <span>@procurement.SupportPhone</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>